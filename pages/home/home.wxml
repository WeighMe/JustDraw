<!-- <view class="container" > -->
<view class="whole" style='background:url("https://upload-images.jianshu.io/upload_images/9653454-18e6491d0c98a767.jpg?imageMogr2/auto-orient/");-webkit-background-size:cover;'>
  <view class="v_btnCtnr">
    <view class='btn_flex'>
      <view class="btntoroom"><image class="btn" src='../images/btn1.png' bindtap='jump2Room'></image></view>
      <view class="btntoroom"><image class="btn" src='../images/btn2.png' bindtap='jump2Ran'></image></view>
      <view class='btntoroom'><image class='btn' src='../images/btn3.png' bindtap='showWin'></image></view>
    </view>
  </view>
  <view class='v_roll' catchtap='showWin'></view>
  <view class='v_winCtnr' catchtap='hideWin' wx:if='{{setShow}}'>
    <view animation="{{animationData}}" class="v_enterRoom" catchtap='stop' wx:if='{{setShow}}'>
      <view class='v_header'>请输入房间号
      </view>
      <form bindsubmit='enterRoom'>
        <input class='i_room' name="roomNumber" type='number' focus='true' confirm-type='go' maxlength='3' bindconfirm='enterRoom'></input>
        <button class='btn_no' bindtap='hideWin'>取消</button>
        <button class='btn_yes' form-type='submit'>确认</button>
      </form>
      
    </view>
  </view>
</view>
