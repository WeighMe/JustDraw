/* pages/room/room.wxss */
page{  
  background-color: salmon;  
  width:100%;  
  height:100%;  
} 
.whole{  
  background-color: darkkhaki;  
  width:100%;  
  height:100%;   
}  
.v_topCtnr{
  width: 100%;
  height: 300rpx;
  background: gray;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.v_botCtnr{
  position: absolute;
  width: 100%;
  height: 300rpx;
  bottom: 0;
  background: gray;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.v_midCtnr{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.txt_roomNo{
  margin-top:10rpx; 
  margin-left:200rpx; 
  width: 50%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background-color: yellowgreen;
  box-shadow: 2px 2px 2px 2px gray;
}
.btn_invite{
  margin-top: 15%;
  width: 50%;
  height: 120rpx;
  background-color: darkkhaki;
  box-shadow: 5px 5px 5px 5px gray;
  color: rgb(30,30,30);
}
.btn_start{
  margin-top: 15%;
  width: 50%;
  height: 120rpx;
  background-color: darkkhaki;
  box-shadow: 5px 5px 5px 5px gray;
  color: rgb(30,30,30);
}
.v_userInfo{
  margin-left: 50rpx;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  border: 0 solid #ff0000;
}
.img_user{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background: silver;
}
.txt_user{
  width: 150rpx;
  font-size:11pt;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  text-align: center;
}