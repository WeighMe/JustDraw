  width: 100%;
  position: absolute;
  z-index: 999;
}
.menu li{
  font-size: 14px;
  line-height: 34px;
  color: #575757;
  height: 34px;
  display: block;
  padding-left: 15px;
  border-bottom: 1px solid #dbdbdb;
}
