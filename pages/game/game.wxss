.vw_popover_top{
  z-index: 2000;
  word-wrap:break-word;
  width: 150rpx; 
  background: #eee;
  position: absolute;
  top:135rpx;
  -moz-border-radius:    10rpx; 
  -webkit-border-radius: 10rpx; 
  border-radius:         10rpx;
  border:1rpx solid #d3d3d3;
}

.vw_popover_top::before {
   content:"";
   position: absolute;
   left:26rpx;
   bottom: 100%;
   width: 0;
   height: 0;
   border-left: 13rpx solid transparent;
   border-right: 13rpx solid transparent;
   border-bottom: 26rpx solid #eee;
}

.vw_popover_bottom{
  z-index: 2000;
  word-wrap:break-word;
  width: 150rpx; 
  background: #eee;
  position: absolute;
  bottom:180rpx;
  -moz-border-radius:    10rpx; 
  -webkit-border-radius: 10rpx; 
  border-radius:         10rpx;
  border:1rpx solid #d3d3d3;
}

.vw_popover_bottom::before {
   content:"";
   position: absolute;
   left:26rpx;
   top: 100%;
   width: 0;
   height: 0;
   border-left: 13rpx solid transparent;
   border-right: 13rpx solid transparent;
   border-top: 26rpx solid #eee;
}


