/* pages/game/game.wxss */

.vw_top{
  height: 150rpx;
  width: 100%;
  background: tan;
  display: flex;
  flex-direction: row;
}

.vw_mid{
  height: 905rpx;
  width: 100%;
  
}

.canvas_style{
  margin: 20rpx; 
  border:1rpx solid #d3d3d3;
  height:830rpx;
}

.vw_toolkit{
  width:100%;
  height: 10%;
  background-color: #fff;
  color: #1aad19;
  flex-direction: row;
  border-bottom:1rpx solid #d3d3d3;
  display:flex;
  align-items: center;
}

.width-item{
  margin:10rpx;
  background:#000;
  border:1rpx solid #000;
  border-radius:50rpx;
}

.active-item{
  border:5rpx solid #ffffcc;
  box-shadow:0 0 10rpx 5rpx #aaaaaa;
}

.vw_bot{
  position: absolute;
  bottom: 0;
  height: 150rpx;
  width: 100%;
  background: rebeccapurple;
  display: flex;
  flex-direction: row;

}
.vw_userInfo{
  height: 100%;
  width: 250rpx;
}

.vw_userInfo .img_user{
  height: 100rpx;
  width: 100rpx;
  background: black;
  border-radius: 50rpx;
}