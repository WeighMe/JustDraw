<!--pages/game/game.wxml-->
<!--顶部组件，放置用户信息-->
<view class='vw_ctnr'>
  <view class='vw_top'>
      <view class='vw_userInfo' wx:for="{{userInfo1}}" wx:key="name" wx:for-item="info">
        <view class='vw_userCtnr'>
          <image class='img_user' src='{{info.icon}}'></image>
          <text class='txt_user'>{{info.name}}</text>
        </view>
        <text class='txt_score'>0</text>
      </view>
  </view>

  <!--中间组件，放置画板，计时器，提示-->
  <view class='vw_mid'>
    <view class='vw_widget'>
      <view class='vw_countdown'>
        <text>时间：{{time1}}</text>
      </view>
      <view class='vw_wordHint'>
        提示：{{hint}}
      </view>
    </view>
    <canvas canvas-id="myCanvas" class="canvas_style"
    bindtouchstart="start"
    bindtouchmove="move"
    bindtouchend="end">
    <cover-view class="vw_toolkit">
      <cover-view class="vw_toolkit_wrp">
      <block wx:for="{{itemWidth}}" wx:for-index="index" wx:key="item">
        <cover-view class="width-item {{activeWidthIndex == index ?'active-item':''}}" data-index="{{index}}" data-width="{{item}}" bindtap="setItemWidth" style="width:{{item}}rpx;height:{{item}}rpx;"></cover-view>
      </block>
      
      </cover-view>
      <cover-view class="vw_toolkit_wrp">
      <block wx:for="{{itemColor}}" wx:for-index="index" wx:key="item">
        <cover-view class="color-item {{activeColorIndex == index ?'active-item':''}}" data-index="{{index}}" data-color="{{item}}" bindtap="setItemColor" style="background:{{item}};"></cover-view>
      </block>
      </cover-view>
    </cover-view>
    <!--绘画结束，正确回答界面-->
  <cover-view id="vw_2" class='vw_winCtnr'  wx:if='{{flag_show2}}'>
    <cover-view class='vw_win vw_answer'>
      <cover-view>正确答案：{{currentWord}}</cover-view>
      <cover-view>本轮得分{{time2}}</cover-view>
    </cover-view>
  </cover-view>
    </canvas>
    
  </view>

  <view class='vw_bot'>
    <view class='vw_userInfo' wx:for="{{userInfo2}}" wx:key="name" wx:for-item="info">
      <view class='vw_userCtnr'>
        <image class='img_user' src='{{info.icon}}'></image>
        <text class='txt_user'>{{info.name}}</text>
      </view>
      <text class='txt_score'>0</text>
    </view>
  </view>
  <view id='vw_1' class='vw_winCtnr' catchtap='hideWin(1)' wx:if='{{flag_show1}}'>
    <view class="vw_win vw_choose" catchtap='stop'>
      <text class='txt_header'>请选择要画的词：</text>
      <text class='txt_timer'>(剩余 {{time2}} 秒)</text>
      <block wx:for="{{words}}" wx:key="word" wx:for-item="word">
        <button id="btn_{{index}}" class="btn_choose{{index}}" bindtap='btnCWClicked'>{{word}}</button>
      </block>
    </view>
  </view>

  <view id="vw_2" class='vw_winCtnr' catchtap='hideWin(2)' wx:if='{{flag_show2}}'>
    <view class='vw_win vw_answer' catchtap='stop'>
      <text class='txt_rightAnsIs'>正确答案：{{currentWord}}</text>
      <text class='txt_rightAns'>苹果</text>
      <text class='txt_getScore'>本轮得分：{{time2}}</text>
    </view>
  </view>
  <!--输入答案控件-->
    <button class="btn_answer" wx:if="{{flag_show3}}" bindtap='btnAnsClicked'>回答</button>
    <input class='ipt_answer' wx:if="{{flag_show4}}"></input>

</view>
